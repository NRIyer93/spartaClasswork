<form action="/<%= @guide.id %>" method="POST">
	<% if(@guide.id != "") %>
		<input type="hidden" name="_method" method="PUT">
	<% end %>
	<div>
		<label>City name</label>
		<input type="text" name="title" placeholder="Enter city name" value="<%= @guide.title %>">
	</div>
	<div>
		<label>Description</label>
		<textarea name="content" placeholder="Tell us"> <%= @guide.content %></textarea>
	</div>
	<div>
		<input type="submit" name="Save entry">
	</div>
</form>