<form action="/<%= @recipe[:id] %>" method="POST">
	<div>
		<label>Title</label>
		<input type="text" name="title" placeholder="Enter the recipe name" value="<%= @recipe[:title] %>">
	</div>
	<div>
		<label>Content</label>
		<textarea name="Content" placeholder="Tell us the recipe"><%= @recipe[:content] %></textarea>
	</div>
	<div>
		<input type="submit" name="OK">
	</div>
</form>